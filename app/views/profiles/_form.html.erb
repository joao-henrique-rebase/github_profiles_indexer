<%= form_with(model: @profile, url: profiles_path, local: true, class: "mt-4") do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control bg-secondary text-white border-0" %>
  </div>

  <div class="mb-3">
    <%= f.label :github_url, "URL do GitHub", class: "form-label" %>
    <%= f.text_field :github_url, class: "form-control bg-secondary text-white border-0" %>
  </div>

  <div class="d-grid">
    <%= f.submit "Salvar Perfil", class: "btn btn-outline-light w-100" %>
  </div>
<% end %>
