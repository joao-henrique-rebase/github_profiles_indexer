<div class="container" data-controller="search">
  <h2 class="text-center mb-4 fw-bold"><i class="bi bi-list"></i> Lista de Perfis</h2>
  <div class="mb-4">
    <input type="text" class="form-control" 
           placeholder="Buscar por nome, usuário, organização, localização..."
           data-search-target="input" 
           data-action="input->search#perform"
           data-search-url="<%= profiles_path %>">
  </div>
  <div data-search-target="list">
    <%= render partial: "profiles/list", locals: { profiles: @profiles } %>
  </div>
</div>
