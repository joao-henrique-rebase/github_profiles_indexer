<div class="container" data-controller="rescan" data-rescan-url="<%= profile_path(@profile, format: :text) %>">
  <h2 class="fw-bold text-center"><i class="bi bi-person"></i> Perfil</h2>

  <div class="d-flex justify-content-center align-items-center">
    <div class="text-left bg-dark text-white p-5 shadow-lg rounded-4" style="width: 800px;">
      <div data-rescan-target="profile">
        <%= render partial: "profiles/show_profile", locals: { profile: @profile } %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <button type="button" class="btn btn-outline-warning" 
                data-action="click->rescan#perform" 
                data-rescan-url="<%= rescan_profile_path(@profile) %>">
          <i class="bi bi-arrow-clockwise"></i> Re-escanear
        </button>

        <a href="<%= edit_profile_path(@profile) %>" class="btn btn-outline-light">
          <i class="bi bi-pencil"></i> Editar
        </a>

        <%= button_to "Remover", profile_path(@profile), method: :delete, class: "btn btn-outline-danger",
              form: { data: { turbo_confirm: "Tem certeza que deseja remover este perfil?" } } %>
      </div>
    </div>
  </div>

  <div id="rescan-message" class="mt-3 text-center d-none" data-rescan-target="message"></div>
</div>
